# Use a imagem oficial do PHP com Apache
# Use a imagem oficial do Apache com PHP
FROM php:8.2-apache

# Define o diretório de trabalho
WORKDIR /var/www/html

# Habilita o mod_rewrite (necessário para rotas em frameworks como Laravel)
RUN a2enmod rewrite

# Instala extensões PHP comuns (ajuste conforme necessário)
RUN docker-php-ext-install pdo pdo_mysql

# Copia todos os arquivos do projeto para o container
COPY . .

# Define o DocumentRoot do Apache para /var/www/html/public
# (Substitua /public pelo diretório correto do seu projeto)
ENV APACHE_DOCUMENT_ROOT /var/www/html/public
RUN sed -ri -e 's!/var/www/html!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/sites-available/*.conf
RUN sed -ri -e 's!/var/www/!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/apache2.conf /etc/apache2/conf-available/*.conf

# Ajusta permissões (evita erro 403)
RUN chown -R www-data:www-data /var/www/html && \
    chmod -R 755 /var/www/html

# Expõe a porta 80 (HTTP)
EXPOSE 80

# Comando padrão: inicia o Apache
CMD ["apache2-foreground"]
